<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
				"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="webserverdb.properties" />
	
	<typeAliases>
		<!-- typeAlias
				- 애플리케이션에서 SQL 문으로 값을 전달합니다
				- SQL 문 실행 시 반환되는 레코드를 저장하는 용도로 사용하기 위한 빈을 생성합니다.-->
		<typeAlias type="com.w2.sample.SampleVO" alias="test" />
		<!-- type : 모델 클래스의 풀 패키지 이름 -->
		<!-- alias : 별칭으로 Maaper 파일에서 사용합니다. -->
	</typeAliases>
	
	<!-- 데이터베이스 정보 설정 : 어노테이션 설정시 작성하지 않아도 됩니다. -->
					<!-- transactionManager 
					- JDBC : 수동 커밋 > 코드에 commit/rollback 지정해야합니다.
					- Managed : 자동 커밋 -->
					<!-- dataSource type : 커넥션 풀 사용 여부 -->
	<!-- 어노테이션 설정시 생략-->
	<environments default="development">
		<environment id="development">
			<transactionManager type="Managed" />
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driverClassName}"/>
				<property name="url" value="${jdbc.url}"/>
				<property name="username" value="${jdbc.username}"/>
				<property name="password" value="${jdbc.password}"/>
			</dataSource>
		</environment>	
	</environments>
 	
 	
	<!-- SQL 작성문을 지정합니다. : Mapper 파일의 위치 -->
	<mappers>
		<mapper resource="mappings/mapping.xml"/>
	</mappers>
</configuration>